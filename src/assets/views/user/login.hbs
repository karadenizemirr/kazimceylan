<!--====== Solutions Section Start ======-->
<section class="solutions-section-two rel z-1 pt-130 rpt-100 pb-80 rpb-50">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="/public/images/login-image.png" alt="" class="image-fluid">
            </div>
            <div class="col-md-6 mt-auto mb-auto">
                <div class="card border-white">
                    <div class="card-title text-center">
                        <h3>
                            Giriş Yap
                        </h3>
                    </div>
                    <div class="card-body">
                        <form id="register_form">
                            <div class="form-group mb-4">
                                <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="email">
                            </div>
                            <div class="form-group mb-4">
                                <input type="password" class="form-control" placeholder="Şifre" name="password">
                            </div>
                            <div class="form-group mb-4 text-center">
                                <p>
                                    Mevcut bir hesabınız yoksa <a href="/user/register" class="text-primary">Kayıt Olun</a>
                                </p>
                                <button class="btn btn-primary">
                                    Giriş Yap
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#register_form').submit(function (e) {
            e.preventDefault()
            var data = $(this).serialize()

            $.ajax({
                url: '/user/login',
                type: 'POST',
                data: data,
                success: function (response) {
                    if (response === 200) {
                        Swal.fire({
                            title: 'Giriş İşlemi',
                            text: 'Giriş işlemi başarılı bir şekilde gerçekleştirildi.',
                            icon: 'success',
                        }).then((result) => {
                            if (result.value) {
                                window.location.href = '/'; // Anasayfaya yönlendirme
                            }
                        });
                    }else {
                                            Swal.fire({
                        title: 'Giriş İşlemi',
                        text: 'Giriş işlemi başarısız oldu.',
                        icon: 'error',
                    })
                    }
                },
                error: function () {
                    Swal.fire({
                        title: 'Giriş İşlemi',
                        text: 'Giriş işlemi başarısız oldu.',
                        icon: 'error',
                    })
                }
            })

        })
    })
</script>